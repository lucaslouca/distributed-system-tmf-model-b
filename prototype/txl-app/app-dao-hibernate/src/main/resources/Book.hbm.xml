<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.txlapp.domain.Book" table="BOOK">
        <id name="id" type="java.lang.Long">
            <column name="ID"/>
            <generator class="native"/>
        </id>
        <property name="author" type="encryptedString">
            <column name="AUTHOR"/>
        </property>
        <property name="title" type="encryptedString">
            <column name="TITLE"/>
        </property>
    </class>
</hibernate-mapping>
